<Window x:Class="WizMes_ParkPro.PopUp.ShowCircleGraph"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WizMes_ParkPro.PopUp"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="원형 그래프" Height="300" Width="400" Loaded="ShowCircleGraph_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="220*" />
            <RowDefinition Height="30*" />
        </Grid.RowDefinitions>

        <lvc:PieChart x:Name="PieChart"  LegendLocation="Right" Hoverable="False" Grid.Row="0" Margin="1" >
        </lvc:PieChart>

        <Button Grid.Row="1" Content="닫기" Click="btnClose_Click" />

    </Grid>
</Window>
