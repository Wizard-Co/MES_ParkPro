<UserControl x:Class="WizMes_ParkPro.Win_mtr_StuffIN_Inspect_U"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WizMes_ParkPro"
             mc:Ignorable="d" Loaded="UserControl_Loaded"
             d:DesignHeight="620" d:DesignWidth="820">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88*"/>
            <RowDefinition Height="532*"/>
        </Grid.RowDefinitions>
        <!-- 메시지 -->
        <Popup x:Name="Hoit">
            
        </Popup>
        <Grid Grid.Row="0" Background="{DynamicResource WizMes_ParkPro}" Margin="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="160*" />
                <ColumnDefinition Width="180*" />
                <ColumnDefinition Width="180*" />
                <ColumnDefinition Width="200*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblDateSrh" Grid.Column="0" Style="{DynamicResource LabelSearch}"
                       MouseLeftButtonUp="lblDateSrh_MouseLeftButtonUp">
                    <StackPanel Style="{DynamicResource StackPanelInLabel}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <CheckBox x:Name="chkDateSrh" Checked="chkDate_Checked" Unchecked="chkDate_Unchecked" VerticalAlignment="Center"/>
                        </Viewbox>
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text=" 입고 일자" Style="{DynamicResource TextBlockInViewBoxSearch}" />
                        </Viewbox>

                    </StackPanel>
                </Label>
                <DatePicker x:Name="dtpSDateSrh" Grid.Column="1" Style="{DynamicResource DatePickerSearch}" IsEnabled="False"/>

            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>

                <DatePicker x:Name="dtpEDateSrh" Grid.Column="1" Grid.Row="1" Style="{DynamicResource DatePickerSearch}" IsEnabled="False"/>

            </Grid>
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*" />
                    <ColumnDefinition Width="10*" />
                    <ColumnDefinition Width="10*" />
                    <ColumnDefinition Width="10*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="btnLastMonth" Grid.Column="0" Content="전월" Click="btnLastMonth_Click"/>
                <Button x:Name="btnThisMonth" Grid.Column="1" Content="금월" Click="btnThisMonth_Click"/>
                <Button x:Name="btnYesterday" Grid.Column="2" Content="전일" Click="btnYesterday_Click"/>
                <Button x:Name="btnToday" Grid.Column="3" Content="금일" Click="btnToday_Click"/>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*" />
                    <ColumnDefinition Width="90*" />
                    <ColumnDefinition Width="15*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblArticleGrpSrh" Grid.Column="0" Style="{DynamicResource LabelSearch}"
                       MouseLeftButtonUp="lblArticleGrpSrh_MouseLeftButtonUp">
                    <StackPanel Style="{DynamicResource StackPanelInLabel}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <CheckBox x:Name="chkArticleGrpSrh" VerticalAlignment="Center"/>
                        </Viewbox>
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text=" 제품그룹" Style="{DynamicResource TextBlockInViewBoxSearch}" />
                        </Viewbox>

                    </StackPanel>
                </Label>
                <ComboBox x:Name="cboArticleGrpSrh" Grid.Column="1"  Background="White">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=chkArticleGrpSrh,Path=IsChecked}" Value="True">
                                    <Setter Property="IsEnabled" Value="True"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=chkArticleGrpSrh,Path=IsChecked}" Value="False">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*" />
                    <ColumnDefinition Width="90*" />
                    <ColumnDefinition Width="15*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblArticleSrh" Grid.Column="0" Style="{DynamicResource LabelSearch}"
                       MouseLeftButtonUp="lblArticleSrh_MouseLeftButtonUp">
                    <StackPanel Style="{DynamicResource StackPanelInLabel}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <CheckBox x:Name="chkArticleSrh" VerticalAlignment="Center"/>
                        </Viewbox>
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text=" 품     번" Style="{DynamicResource TextBlockInViewBoxSearch}"/>
                        </Viewbox>

                    </StackPanel>
                </Label>
                <TextBox x:Name="txtArticleSrh" Grid.Column="1" Grid.ColumnSpan="2"
                         Keyboard.KeyDown="txtArticleSrh_KeyDown">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=chkArticleSrh,Path=IsChecked}" Value="True">
                                    <Setter Property="IsEnabled" Value="True"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=chkArticleSrh,Path=IsChecked}" Value="False">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <Button x:Name="btnPfBuyerArticleNo" Grid.Column="3"  Click="btnPfBuyerArticleNoSrh_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=chkArticleSrh,Path=IsChecked}" Value="True">
                                    <Setter Property="IsEnabled" Value="True"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=chkArticleSrh,Path=IsChecked}" Value="False">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Image Source="{DynamicResource btiPlusFind}" />
                </Button>


                <!--<Button x:Name="btnPfArticleSrh" Grid.Column="3" Margin="1" Click="btnPfArticleSrh_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=chkArticleSrh,Path=IsChecked}" Value="True">
                                    <Setter Property="IsEnabled" Value="True"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=chkArticleSrh,Path=IsChecked}" Value="False">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Image Source="{DynamicResource btiPlusFind}" />
                </Button>-->
            </Grid>
            <Grid Grid.Row="2" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*" />
                    <ColumnDefinition Width="90*" />
                    <ColumnDefinition Width="15*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblCustomSrh" Grid.Column="0" Style="{DynamicResource LabelSearch}"
                       MouseLeftButtonUp="lblCustomSrh_MouseLeftButtonUp">
                    <StackPanel Style="{DynamicResource StackPanelInLabel}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <CheckBox x:Name="chkCustomSrh" VerticalAlignment="Center"/>
                        </Viewbox>
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text=" 구매거래처" Style="{DynamicResource TextBlockInViewBoxSearch}" />
                        </Viewbox>

                    </StackPanel>
                </Label>
                <TextBox x:Name="txtCustomSrh" Grid.Column="1"   Grid.ColumnSpan="2"
                         Keyboard.KeyDown="txtCustomSrh_KeyDown">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=chkCustomSrh,Path=IsChecked}" Value="True">
                                    <Setter Property="IsEnabled" Value="True"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=chkCustomSrh,Path=IsChecked}" Value="False">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <Button x:Name="btnPfCustomSrh" Grid.Column="3"  Click="btnPfCustomSrh_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=chkCustomSrh,Path=IsChecked}" Value="True">
                                    <Setter Property="IsEnabled" Value="True"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=chkCustomSrh,Path=IsChecked}" Value="False">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Image Source="{DynamicResource btiPlusFind}" />
                </Button>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*" />
                    <ColumnDefinition Width="90*" />
                    <ColumnDefinition Width="15*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblStuffClssSrh" Grid.Column="0"  Style="{DynamicResource LabelSearch}"
                       MouseLeftButtonUp="lblStuffClssSrh_MouseLeftButtonUp">
                    <StackPanel Style="{DynamicResource StackPanelInLabel}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <CheckBox x:Name="chkStuffClssSrh" VerticalAlignment="Center"/>
                        </Viewbox>
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text=" 입고구분" Style="{DynamicResource TextBlockInViewBoxSearch}" />
                        </Viewbox>

                    </StackPanel>
                </Label>
                <ComboBox x:Name="cboStuffClssSrh" Grid.Column="1"  Background="White">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=chkStuffClssSrh,Path=IsChecked}" Value="True">
                                    <Setter Property="IsEnabled" Value="True"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=chkStuffClssSrh,Path=IsChecked}" Value="False">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*" />
                    <ColumnDefinition Width="90*" />
                    <ColumnDefinition Width="15*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblsInspectApprovalYN" Grid.Column="0" Style="{DynamicResource LabelSearch}"
                       MouseLeftButtonUp="lblsInspectApprovalYN_MouseLeftButtonUp">
                    <StackPanel Style="{DynamicResource StackPanelInLabel}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <CheckBox x:Name="chksInspectApprovalYN" VerticalAlignment="Center"/>
                        </Viewbox>
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text=" 입고검수구분" Style="{DynamicResource TextBlockInViewBoxSearch}" />
                        </Viewbox>

                    </StackPanel>
                </Label>
                <ComboBox x:Name="cbosInspectApprovalYN" Grid.Column="1"  Background="White"
                          SelectionChanged="cbosInspectApprovalYN_SelectionChanged">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=chksInspectApprovalYN,Path=IsChecked}" Value="True">
                                    <Setter Property="IsEnabled" Value="True"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=chksInspectApprovalYN,Path=IsChecked}" Value="False">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="4" Grid.RowSpan="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnTest" Grid.Row="0" Grid.Column="0" Margin="1" Click="btnTest_Click" Visibility="Hidden">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiRefresh}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="테스트" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnSearch" Grid.Row="0" Grid.Column="1" Margin="1" Click="btnSearch_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiSearch}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Source={StaticResource tblSearch},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnClose" Grid.Row="0" Grid.Column="3" Margin="1" Click="btnClose_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiClose}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Source={StaticResource tblClose},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnInspectApprovalPlus" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Margin="1"
                        Click="btnInspectApprovalPlus_Click" Background="#b0e77a">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiMathPlus}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="입고검수처리" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnInspectApprovalMinus" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Margin="1"
                        Click="btnInspectApprovalMinus_Click" Background="#ffe0c0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiMathMinus}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="입고검수 취소" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnExcel" Grid.Row="0" Grid.Column="2" Margin="1" Click="btnExcel_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiExcel}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Source={StaticResource tblExcel},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.15*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="0.85*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="2.5*"/>
                    <RowDefinition Height="1.5*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox Grid.Column="0" Style="{DynamicResource CheckBoxInputArea}" x:Name="AllCheck"
                              Content="전체선택"  Checked="AllCheck_Checked" Unchecked="AllCheck_Unchecked"/>
                    <ToggleButton x:Name="tgnReqSort" Grid.Column="4" Margin="1" HorizontalContentAlignment="Center" 
                            VerticalContentAlignment="Center" Click="tgnReqSort_Click">
                        <Viewbox Margin="1">
                            <TextBlock Text="발주별"/>
                        </Viewbox>
                    </ToggleButton>
                    <ToggleButton x:Name="tgnCustomSort" Grid.Column="5" Margin="1" HorizontalContentAlignment="Center" 
                            VerticalContentAlignment="Center" Click="tgnCustomSort_Click">
                        <Viewbox Margin="1">
                            <TextBlock Text="거래처별"/>
                        </Viewbox>
                    </ToggleButton>
                </Grid>
                <Grid Grid.Row="1">
                    <DataGrid x:Name="dgdMainReq" SelectionChanged="dgdMainReq_SelectionChanged" RowHeaderWidth="0"  Style="{StaticResource DataGridSet1}">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Resources>
                                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#3399FF"/>
                                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White"/>
                                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#3399FF" />
                                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="White"/>
                                </Style.Resources>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="순번" Binding="{Binding Num}" Width="auto"/>
                            <DataGridTemplateColumn Header="C" Width="auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox Click="CHK_Click_REQ">
                                            <CheckBox.Style>
                                                <Style TargetType="CheckBox">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Chk,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Value="true">
                                                            <Setter Property="IsChecked" Value="True"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Chk,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Value="false">
                                                            <Setter Property="IsChecked" Value="False"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                </Style>
                                            </CheckBox.Style>
                                        </CheckBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="발주번호" Binding="{Binding Req_ID}" Width="auto" Visibility="Hidden"/>
                            <DataGridTextColumn Header="발주명" Binding="{Binding ReqName}" Width="auto" Visibility="Hidden"/>
                            <DataGridTextColumn Header="사업장" Binding="{Binding kCompany}" Width="auto" Visibility="Hidden"/>

                            <DataGridTextColumn Header="입고일자" Binding="{Binding StuffDate_CV}" Width="auto"/>
                            <DataGridTextColumn Header="거래처" Binding="{Binding CustomName}" Width="auto"/>
                            <DataGridTextColumn Header="품 번" Binding="{Binding BuyerArticleNo}" Width="auto"/>
                            <DataGridTextColumn Header="품 명" Binding="{Binding Article}" Width="auto"/>
                            <DataGridTextColumn Header="입고구분" Binding="{Binding StuffClssName}" Width="auto"/>
                            <DataGridTextColumn Header="입고전창고" Binding="{Binding fromLocName}" Width="auto"/>

                            <DataGridTextColumn Header="입고후창고" Binding="{Binding ToLocName}" Width="auto"/>
                            <DataGridTextColumn Header="입고처명" Binding="{Binding Custom}" Width="auto"/>
                            <DataGridTextColumn Header="입고수량" Binding="{Binding StuffQty,StringFormat=N0}" Width="auto" 
                                                CellStyle="{StaticResource NumericDataGridCell}"/>
                            <DataGridTextColumn Header="입고단위" Binding="{Binding UnitClssName}" Width="auto"/>
                            <DataGridTextColumn Header="단가" Binding="{Binding UnitPrice,StringFormat=N0}" Width="auto"
                                                CellStyle="{StaticResource NumericDataGridCell}"/>

                            <DataGridTextColumn Header="화폐단위" Binding="{Binding PriceClssName}" Width="auto"/>
                            <DataGridTextColumn Header="부가세 별도" Binding="{Binding Vat_Ind_YN}" Width="auto"/>
                            <DataGridTextColumn Header="환율" Binding="{Binding ExchRate}" Width="auto"/>
                            <DataGridTextColumn Header="금액" Binding="{Binding amount,StringFormat=N0}" Width="auto"
                                                CellStyle="{StaticResource NumericDataGridCell}"/>
                            <DataGridTextColumn Header="비고" Binding="{Binding Remark}" Width="auto"/>

                            <DataGridTextColumn Header="LotID" Binding="{Binding Lotid}" Width="auto"/>
                            <DataGridTextColumn Header="입고번호" Binding="{Binding StuffInID}" Width="auto"/>
                            <!--<DataGridTextColumn Header="사용구분" Binding="{Binding OrderFlag}" Width="auto"/>-->
                            <DataGridTextColumn Header="품명그룹" Binding="{Binding ArticleGrpID}" Width="auto"/>
                            <DataGridTextColumn Header="거래처ID" Binding="{Binding CustomID}" Width="auto"/>

                            <DataGridTextColumn Header="품명코드" Binding="{Binding ArticleID}" Width="auto"/>
                            <DataGridTextColumn Header="Spec" Binding="{Binding Spec}" Width="auto"/>
                            <DataGridTextColumn Header="검수자" Binding="{Binding Inspector}" Width="auto"/>
                            <DataGridTextColumn Header="검사자" Binding="{Binding Inspector1}" Width="auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <DataGrid x:Name="dgdMainCustom" Visibility="Hidden" SelectionChanged="dgdMainCustom_SelectionChanged" RowHeaderWidth="0" Style="{DynamicResource DataGridSet1}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="순번" Binding="{Binding Num}" Width="auto"/>
                            <DataGridTemplateColumn Header="C" Width="auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox Click="CHK_Click_Custom">
                                            <CheckBox.Style>
                                                <Style TargetType="CheckBox">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Chk,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Value="true">
                                                            <Setter Property="IsChecked" Value="True"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Chk,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Value="false">
                                                            <Setter Property="IsChecked" Value="False"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                </Style>
                                            </CheckBox.Style>
                                        </CheckBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="거래처" Binding="{Binding CustomName}" Width="auto"/>
                            <DataGridTextColumn Header="사업장" Binding="{Binding kCompany}" Width="auto"/>
                            <DataGridTextColumn Header="입고일자" Binding="{Binding StuffDate_CV}" Width="auto"/>

                            <DataGridTextColumn Header="발주번호" Binding="{Binding Req_ID}" Width="auto"/>
                            <DataGridTextColumn Header="발주명" Binding="{Binding ReqName}" Width="auto"/>
                            <DataGridTextColumn Header="품 번" Binding="{Binding BuyerArticleNo}" Width="auto"/>
                            <DataGridTextColumn Header="품 명" Binding="{Binding Article}" Width="auto"/>
                            <DataGridTextColumn Header="입고구분" Binding="{Binding StuffClssName}" Width="auto"/>
                            <DataGridTextColumn Header="입고전창고" Binding="{Binding fromLocName}" Width="auto"/>

                            <DataGridTextColumn Header="입고후창고" Binding="{Binding ToLocName}" Width="auto"/>
                            <DataGridTextColumn Header="입고처명" Binding="{Binding Custom}" Width="auto"/>
                            <DataGridTextColumn Header="입고수량" Binding="{Binding StuffQty,StringFormat=N0}" Width="auto" 
                                                CellStyle="{StaticResource NumericDataGridCell}"/>
                            <DataGridTextColumn Header="입고 단위" Binding="{Binding UnitClssName}" Width="auto"/>
                            <DataGridTextColumn Header="단가" Binding="{Binding UnitPrice,StringFormat=N0}" Width="auto"
                                                CellStyle="{StaticResource NumericDataGridCell}"/>

                            <DataGridTextColumn Header="화폐 단위" Binding="{Binding PriceClssName}" Width="auto"/>
                            <DataGridTextColumn Header="부가세 별도" Binding="{Binding Vat_Ind_YN}" Width="auto"/>
                            <DataGridTextColumn Header="환율" Binding="{Binding ExchRate}" Width="auto"/>
                            <DataGridTextColumn Header="금액" Binding="{Binding amount,StringFormat=N0}" Width="auto"
                                                CellStyle="{StaticResource NumericDataGridCell}"/>
                            <DataGridTextColumn Header="비고" Binding="{Binding Remark}" Width="auto"/>

                            <DataGridTextColumn Header="LotID" Binding="{Binding lotid}" Width="auto"/>
                            <DataGridTextColumn Header="입고번호" Binding="{Binding StuffInID}" Width="auto"/>
                            <!--<DataGridTextColumn Header="사용구분" Binding="{Binding OrderFlag}" Width="auto"/>-->
                            <DataGridTextColumn Header="품명그룹" Binding="{Binding ArticleGrpID}" Width="auto"/>
                            <DataGridTextColumn Header="거래처ID" Binding="{Binding CustomID}" Width="auto"/>

                            <DataGridTextColumn Header="품명코드" Binding="{Binding ArticleID}" Width="auto"/>
