<UserControl x:Class="WizMes_ParkPro.Win_com_ArticleCode_U"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WizMes_ParkPro"         
             mc:Ignorable="d" Loaded="UserControl_Loaded"
             d:DesignHeight="620" d:DesignWidth="820">
    <!--xmlns:dgx="clr-namespace:DataGridExtensions;assembly=DataGridExtensions"-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88*" />
            <RowDefinition Height="532*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="{DynamicResource WizMes_ParkPro}" Margin="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="22*" />
                <RowDefinition Height="22*" />
                <RowDefinition Height="22*" />
                <RowDefinition Height="22*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="160*" />
                <ColumnDefinition Width="180*" />
                <ColumnDefinition Width="180*" />
                <ColumnDefinition Width="200*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1" Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*" />
                    <ColumnDefinition Width="90*" />
                    <ColumnDefinition Width="15*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Style="{DynamicResource LabelSearch}" MouseLeftButtonUp="lblBuyerArticleNoSrh_MouseLeftButtonUp">
                    <StackPanel Style="{DynamicResource StackPanelInLabel}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <CheckBox x:Name="chkBuyerArticleNoSrh" Checked="chkBuyerArticleNoSrh_Checked" Unchecked="chkBuyerArticleNoSrh_Unchecked" VerticalAlignment="Center" />
                        </Viewbox>
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="품    번 " Style="{DynamicResource TextBlockInViewBoxSearch}" />
                        </Viewbox>

                    </StackPanel>
                </Label>
                <TextBox x:Name="txtBuyerArticleNoSrh" Grid.Column="1"
                         Style="{DynamicResource TextBoxSearch}" IsEnabled="False" KeyDown="TxtBuyerArticleNoSrh_KeyDown"/>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*" />
                    <ColumnDefinition Width="90*" />
                    <ColumnDefinition Width="15*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Style="{DynamicResource LabelSearch}" MouseLeftButtonUp="lblArticleSrh_MouseLeftButtonUp">
                    <StackPanel Style="{DynamicResource StackPanelInLabel}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <CheckBox x:Name="chkArticleSrh" Checked="chkArticleSrh_Checked" Unchecked="chkArticleSrh_Unchecked" VerticalAlignment="Center" />
                        </Viewbox>
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="품    명 " Style="{DynamicResource TextBlockInViewBoxSearch}" />
                        </Viewbox>

                    </StackPanel>
                </Label>
                <TextBox x:Name="txtArticleSrh" Grid.Column="1"
                         Style="{DynamicResource TextBoxSearch}" IsEnabled="False" KeyDown="TxtArticleSrh_KeyDown"/>
            </Grid>

            <Grid Grid.Column="1" Grid.Row="2" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*" />
                    <ColumnDefinition Width="90*" />
                    <ColumnDefinition Width="15*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" VerticalContentAlignment="Center" Style="{DynamicResource LabelSearch}" MouseLeftButtonUp="lblSupplyTypeSrh_MouseLeftButtonUp">
                    <StackPanel Style="{DynamicResource StackPanelInLabel}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <CheckBox x:Name="chkSupplyTypeSrh" Checked="chkSupplyTypeSrh_Checked" Unchecked="chkSupplyTypeSrh_Unchecked" VerticalAlignment="Center" />
                        </Viewbox>
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="공급유형 " VerticalAlignment="Center" Style="{DynamicResource TextBlockInViewBoxSearch}" />
                        </Viewbox>

                    </StackPanel>
                </Label>
                <ComboBox x:Name="cboSrhSupplyType" Grid.Column="1" Background="White" Style="{DynamicResource ComboBoxSearchString}" IsEnabled="False"/>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="3" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*" />
                    <ColumnDefinition Width="90*" />
                    <ColumnDefinition Width="15*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblArticleGrpSrh" Grid.Column="0" VerticalContentAlignment="Center"
                       MouseLeftButtonUp="lblArticleGrpSrh_MouseLeftButtonUp" Style="{DynamicResource LabelSearch}">
                    <StackPanel Style="{DynamicResource StackPanelInLabel}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <CheckBox x:Name="chkArticleGrpSrh" Checked="chkArticleGrpSrh_Checked" Unchecked="chkArticleGrpSrh_Unchecked" VerticalAlignment="Center" />
                        </Viewbox>
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="품명그룹"  Style="{DynamicResource TextBlockInViewBoxSearch}"/>
                        </Viewbox>

                    </StackPanel>
                </Label>
                <ComboBox x:Name="cboArticleGrpSearch" Grid.Column="1" Style="{DynamicResource ComboBoxSearchString}" IsEnabled="False" Background="White"/>
            </Grid>

            <!-- 사용안함 -->
            <Grid Grid.Column="2" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100*" />
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="15*" />
                </Grid.ColumnDefinitions>
                <Label Style="{DynamicResource LabelSearch}" MouseLeftButtonUp="lblNoUse_MouseLeftButtonUp">
                    <StackPanel Style="{DynamicResource StackPanelInLabel}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <CheckBox x:Name="chkNoUse" VerticalAlignment="Center" 
                                  Checked="chkNoUse_Checked" Unchecked="chkNoUse_UnChecked" />
                        </Viewbox>

                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="사용안함 포함" Style="{DynamicResource TextBlockInViewBoxSearch}"/>
                        </Viewbox>

                    </StackPanel>
                </Label>
            </Grid>

            <Grid Grid.Column="4" Grid.Row="0" Grid.RowSpan="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnAdd" Grid.Column="0" Margin="1" Click="btnAdd_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiInsert}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblInsert},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnUpdate" Grid.Column="1" Margin="1" Click="btnUpdate_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiUpdate}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblUpdate},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnDelete" Grid.Column="2" Margin="1" Click="btnDelete_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiDelete}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblDelete},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnClose" Grid.Column="3" Margin="1" Click="btnClose_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiClose}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblClose},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>


                    <Button x:Name="btnSearch" Grid.Column="0" Margin="1" Click="btnSearch_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiSearch}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblSearch},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnSave" Grid.Column="1" Margin="1" Click="btnSave_Click" Visibility="Hidden">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiSave}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblSave},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnCancel" Grid.Column="2" Margin="1" Click="btnCancel_Click" Visibility="Hidden">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiCancle}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblCancle},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnExcel" Grid.Column="3" Margin="1" Click="btnExcel_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiExcel}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblExcel},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>


                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1.5*" />
                    </Grid.ColumnDefinitions>

                    <Label x:Name="lblMsg" Grid.Column="1"  Background="Yellow" Foreground="Red" Margin="1" 
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Visibility="Hidden">
                        <TextBlock x:Name="tbkMsg" Text="자료 추가 중" />
                    </Label>
                </Grid>
            </Grid>

        </Grid>
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.82*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="1.2*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="279*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <DataGrid x:Name="dgdArticleCode" Grid.Row="0" SelectionChanged="dgdArticleCode_SelectionChanged" Style="{StaticResource DataGridSet1}"
                          IsReadOnly="True" MouseDoubleClick="dgdArticleCode_MouseDoubleClick" Grid.ColumnSpan="2" 
                          >
                    <DataGrid.Resources>

                        <Style TargetType="DataGridRow">
                            <Style.Resources>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#3399FF"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#3399FF" />
                                <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="White"/>
                            </Style.Resources>

                            <Style.Triggers>
                                <DataTrigger Binding="{Binding UseClss}" Value="*" >
                                    <Setter Property="Foreground" Value="Red"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Num}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="코드" Binding="{Binding ArticleID}"  Visibility="Hidden"/>
                        <!--<DataGridTextColumn Header="품번" Binding="{Binding BuyerArticleNo}" />-->
                        <DataGridTextColumn Header="품명" Binding="{Binding Article}" />
                        <DataGridTextColumn Header="품번" Binding="{Binding BuyerArticleNo}" />
                        <DataGridTextColumn Header="중량" Binding="{Binding Weight}" 
                                            CellStyle="{DynamicResource NumericDataGridCell}"/>
                        <DataGridTextColumn Header="세부내역" Binding="{Binding Spec}" />
                        <DataGridTextColumn Header="이미지명" Binding="{Binding ImageName}" />
                        <DataGridTextColumn Header="사용여부" Binding="{Binding UseClssName}" />
                        <DataGridTextColumn Header="품명그룹" Binding="{Binding ArticleGrpID}" />
                        <DataGridTextColumn Header="공급유형" Binding="{Binding SupplyType}" />
                        <DataGridTextColumn Header="용도" Binding="{Binding UseingTypeName}" />
                        <DataGridTextColumn Header="단위" Binding="{Binding UnitClssName}" />
                        <DataGridTextColumn Header="적정재고량" Binding="{Binding NeedStockQty}" 
                                            
                                            CellStyle="{DynamicResource NumericDataGridCell}"/>
                        <DataGridTextColumn Header="생산박스당 수량" Binding="{Binding ProdQtyPerBox}" 
                                            CellStyle="{DynamicResource NumericDataGridCell}"/>
                        <DataGridTextColumn Header="출하용박스 수량" Binding="{Binding OutQtyPerBox}" 
                                            CellStyle="{DynamicResource NumericDataGridCell}"/>
                        <DataGridTextColumn Header="고객품번" Binding="{Binding BuyerArticleNo}" />
                        <DataGridTextColumn Header="부품분류" Binding="{Binding PartGBNName}" />
                        <DataGridTextColumn Header="단가" Binding="{Binding OutUnitPrice}" 
                                            CellStyle="{DynamicResource NumericDataGridCell}"/>
                        <DataGridTextColumn Header="화폐단위" Binding="{Binding UnitPriceClss}" 
                                            
                                            CellStyle="{DynamicResource NumericDataGridCell}"/>
                        <DataGridTextColumn Header="HSCODE" Binding="{Binding HSCODE}" />
                        <DataGridTextColumn Header="FTAMgrYN" Binding="{Binding FTAMgrYN}" />
                        <DataGridTextColumn Header="도금사양" Binding="{Binding CoatingSpec}" />
                        <DataGridTextColumn Header="매입매출중점관리품" Binding="{Binding BuySaleMainYN}" />
                        <DataGridTextColumn Header="비고" Binding="{Binding Comments}" />
                    </DataGrid.Columns>
                </DataGrid>

                <Grid Grid.Row="1" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="chkAll" Grid.Column="0" Content="전체선택" VerticalAlignment="Center" Margin="1" Style="{DynamicResource chkInNoViewBox}" Visibility="Hidden"/>
                    <TextBlock x:Name="tbkIndexCount" Grid.Column="0" Text=" 검색건수 : " VerticalAlignment="Center" Margin="1"/>
                </Grid>
            </Grid>
            <GridSplitter Grid.Column="1" Width="5" ResizeBehavior="PreviousAndNext" />

            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="7.3*" />
                </Grid.RowDefinitions>
                <Grid x:Name="grdInput1" Grid.Row="0" Grid.Column="0" IsHitTestVisible="False">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.25*" />
                        <ColumnDefinition Width="1.7*" />
                        <ColumnDefinition Width=".1*" />
                        <ColumnDefinition Width="1.25*" />
                        <ColumnDefinition Width="1.7*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />

                        <RowDefinition Height="0*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />

                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="1.1*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />

                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>




                    <!-- 0 Row-->
                    <Label Grid.Column="0" Grid.Row="0"  Style="{DynamicResource LabelInputArea}" >
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="코   드" Style="{DynamicResource TextBlockInViewBoxInput}"/>
                        </Viewbox>
                    </Label>
                    <TextBox x:Name="txtCode" Grid.Column="1" Grid.Row="0" Style="{DynamicResource TextBoxInputAutoCreate}"
                             
                             IsReadOnly="True" Text="{Binding ArticleID}"/>

                    <!-- 주요관심품목, 사용안함 -->
                    <Label Grid.Column="3" Grid.Row="0"  Style="{DynamicResource LabelInputArea}" Visibility="Visible">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="부품분류" Style="{DynamicResource TextBlockInViewBoxInput}"/>
                        </Viewbox>
                    </Label>
                    <ComboBox x:Name="cboPartGBNID" Grid.Row="0" Grid.Column="4" Style="{DynamicResource ComboBoxInputString}" Background="#fff2d2"
                              SelectedValue="{Binding PartGBNID}" DropDownClosed="cboPartGBNID_DropDownClosed" Visibility="Visible"/>


                    <!-- 1 Row-->
                    <Label Grid.Column="0" Grid.Row="1"  Style="{DynamicResource LabelInputArea}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="품   번" Style="{DynamicResource TextBlockInViewBoxInput}"/>
                        </Viewbox>
                    </Label>
                    <TextBox x:Name="txtBuyerArticleNo" Grid.Column="1" Grid.Row="1" Style="{DynamicResource TextBoxInputNecessary}"
                             Text="{Binding BuyerArticleNo}" Grid.ColumnSpan="4" KeyDown="txtBuyerArticleNo_KeyDown"/>

                    <!-- 2 Row -->
                    <!-- 2 Row -->
                    <Label Grid.Column="0" Grid.Row="2"  Style="{DynamicResource LabelInputArea}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="품   명" Style="{DynamicResource TextBlockInViewBoxInput}"/>
                        </Viewbox>
                    </Label>
                    <TextBox x:Name="txtName" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="4"  Style="{DynamicResource TextBoxInputArea}"
                        Text="{Binding Article}" KeyDown="txtName_KeyDown"/>

                    <Label Grid.Column="3" Grid.Row="2"  Style="{DynamicResource LabelInputArea}" Visibility="Hidden">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="난이도"  Style="{DynamicResource TextBlockInViewBoxInput}"/>
                        </Viewbox>
                    </Label>
                    <TextBox x:Name="TextProdDiffiLevel" Grid.Column="4" Grid.Row="2" Style="{DynamicResource TextBoxInput_Number_Right}" 
                             Text="{Binding ProdDiffiLevel }" TextAlignment="Right"  Visibility="Hidden"/>

                    <!-- 3-4 Row-->
                    <Label Grid.Column="0" Grid.Row="3"  Style="{DynamicResource LabelInputArea}" >
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="세부내역(규격)" Style="{DynamicResource TextBlockInViewBoxInput}"/>
                        </Viewbox>
                    </Label>
                    <TextBox x:Name="txtSpec" Grid.Column="1" Grid.Row="3" Style="{DynamicResource TextBoxInputArea}" Grid.ColumnSpan="4" Grid.RowSpan="2"
                             AcceptsReturn="True" Text="{Binding Spec}" KeyDown="txtSpec_KeyDown"/>

                    <!-- 5 Row-->
                    <Label Grid.Column="0" Grid.Row="5"  Style="{DynamicResource LabelInputArea}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="품명그룹" Style="{DynamicResource TextBlockInViewBoxInput}"/>
                        </Viewbox>
                    </Label>
                    <ComboBox x:Name="cboArticleGrp" Grid.Column="1" Grid.Row="5" Style="{DynamicResource ComboBoxInputString}" Background="#fff2d2"
                              SelectedValue="{Binding ArticleGrpID}" SelectionChanged="cboArticleGrp_SelectionChanged"/>

                    <Label Grid.Column="3" Grid.Row="5"  Style="{DynamicResource LabelInputArea}"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Visibility="Visible">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="제품군" Style="{DynamicResource TextBlockInViewBoxInput}"/>
                        </Viewbox>
                    </Label>

                    <ComboBox x:Name="cboProductGrpID" Grid.Row="5" Grid.Column="4" Style="{DynamicResource ComboBoxInputString}" Background="#fff2d2"
                              SelectedValue="{Binding ProductGrpID}" DropDownClosed="cboProductGrpID_DropDownClosed" Visibility="Visible"/>



                    <!-- 6 Row -->
                    <Label Grid.Column="0" Grid.Row="12"  Style="{DynamicResource LabelInputArea}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="공급유형" Style="{DynamicResource TextBlockInViewBoxInput}"/>
                        </Viewbox>
                    </Label>
                    <ComboBox x:Name="cboSupplyType" Grid.Column="1" Grid.Row="12" Style="{DynamicResource ComboBoxInputString}" Background="#fff2d2"
                              SelectedValue="{Binding SupplyType}" DropDownClosed="cboSupplyType_DropDownClosed"/>


                    <!-- 7 Row -->
                    <Label Grid.Column="0" Grid.Row="7"  Style="{DynamicResource LabelInputArea}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="단  위" Style="{DynamicResource TextBlockInViewBoxInput}"/>
                        </Viewbox>
                    </Label>
                    <ComboBox x:Name="cboUnitClss" Grid.Column="1" Grid.Row="7" Style="{DynamicResource ComboBoxInputString}" Background="#fff2d2"
                                  SelectedValue="{Binding UnitClss}" DropDownClosed="cboUnitClss_DropDownClosed"/>

                    <Label Grid.Column="3" Grid.Row="7"  Style="{DynamicResource LabelInputArea}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="라벨관리" Style="{DynamicResource TextBlockInViewBoxInput}"/>
                        </Viewbox>
                    </Label>
                    <ComboBox x:Name="cboLabelPrintYN" Grid.Column="4" Grid.Row="7" Style="{DynamicResource ComboBoxInputString}" Background="#fff2d2"
                              SelectedValue="{Binding LabelPrintYN}" DropDownClosed="cboLabelPrintYN_DropDownClosed"/>

                    <!-- 8 Row -->
                    <Label Grid.Column="0" Grid.Row="8"  Style="{DynamicResource LabelInputArea}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="적정재고량" Style="{DynamicResource TextBlockInViewBoxInput}"/>
                        </Viewbox>
                    </Label>

                    <Grid Grid.Column="1" Grid.Row="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.7*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txtNeedStockQty" Grid.Column="0" Grid.ColumnSpan="2" Style="{DynamicResource TextBoxInput_Number_Right}"
                             Text="{Binding NeedStockQty}"  KeyDown="txtNeedStockQty_KeyDown" Background="#fff2d2" />
                        <!--<Button x:Name="btnCalNeedStockQty" Grid.Column="1" Content="계산" Margin="1" Visibility="Visible"
                            Click="btnCalNeedStockQty_Click"/>-->
                    </Grid>

                    <Label Grid.Column="3" Grid.Row="8"  Style="{DynamicResource LabelInputArea}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="FTA중점관리품" Style="{DynamicResource TextBlockInViewBoxInput}"/>
                        </Viewbox>
                    </Label>
                    <ComboBox x:Name="cboFTAMgrYN" Grid.Column="4" Grid.Row="8" Style="{DynamicResource ComboBoxInputString}" Background="#fff2d2"
                              SelectedValue="{Binding FTAMgrYN}" DropDownClosed="cboFTAMgrYN_DropDownClosed"/>


                    <!-- 9 Row -->
                    <Label Grid.Column="0" Grid.Row="9"  Style="{DynamicResource LabelInputArea}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="출하용박스 수량" Style="{DynamicResource TextBlockInViewBoxInput}"/>
                        </Viewbox>
                    </Label>
                    <TextBox x:Name="TextBoxOutQtyPerBox" Grid.Column="1" Grid.Row="9" Style="{DynamicResource TextBoxInput_Number_Right}"
                             Text="{Binding OutQtyPerBox}" KeyDown="TextBoxOutQtyPerBox_KeyDown"/>

                    <Label Grid.Column="3" Grid.Row="9" Style="{DynamicResource LabelInputArea}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="원재료속성" Style="{DynamicResource TextBlockInViewBoxInput}"/>
                        </Viewbox>
                    </Label>
                    <ComboBox x:Name="cboPART_ATTR" Grid.Column="4" Grid.Row="9" Style="{DynamicResource ComboBoxInputString}" Background="White"
                                  SelectedValue="{Binding PART_ATTR}" DropDownClosed="cboPART_ATTR_DropDownClosed"/>

                    <!-- 10 Row -->
                    <Label Grid.Column="0" Grid.Row="10"  Style="{DynamicResource LabelInputArea}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="생산박스당 수량" Style="{DynamicResource TextBlockInViewBoxInput}"/>
                        </Viewbox>
                    </Label>
                    <TextBox x:Name="TextBoxProdQtyPerBox" Grid.Column="1" Grid.Row="10" Style="{DynamicResource TextBoxInput_Number_Right}"
                             Text="{Binding ProdQtyPerBox}" KeyDown="TextBoxProdQtyPerBox_KeyDown" />


                    <!-- 10 Row -->
                    <Label Grid.Column="3" Grid.Row="10"  Style="{DynamicResource LabelInputArea}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Text="출고/가공 단가" Style="{DynamicResource TextBlockInViewBoxInput}"/>
                        </Viewbox>
                    </Label>
                    <Grid Grid.Row="10" Grid.Column="4">
