                                    <TextBlock Grid.Row="1" Text="C:\Temp로" Foreground="Blue" Margin="1"/>
                                    <TextBlock Grid.Row="2" Text="내려집니다." Foreground="Blue" Margin="1"/>
                                </Grid>
                            </Viewbox>
                        </Grid>
                    </GroupBox>
                    <GroupBox Grid.Row="1" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.7*"/>
                                <RowDefinition Height="5*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Viewbox Grid.Row="0" Margin="1">
                                <TextBlock Grid.Row="0" HorizontalAlignment="Center" Text="금형사용부품등록" />
                            </Viewbox>

                            <DataGrid x:Name="dgdPartsCode" Grid.Row="1" Margin="1" IsReadOnly="True">
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridCell">
                                        <EventSetter Event="KeyDown" Handler="DataGridCell_KeyDown" />
                                        <EventSetter Event="KeyUp" Handler="TextBoxFocusInDataGrid" />
                                        <EventSetter Event="MouseUp" Handler="TextBoxFocusInDataGrid_MouseUp" />
                                        <EventSetter Event="GotFocus" Handler="DataGridCell_GotFocus" />
                                    </Style>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="" >
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Num}" Margin="2"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn x:Name="dgdtpePartsName" Header="부품" Width="*"
                                                            
                                                            SortMemberPath="MCPartName">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Margin="2" Text="{Binding MCPartName}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding MCPartName}" TextChanged="dgdtxtMCPartName_TextChanged"
                                                         Keyboard.KeyDown="dgdtxtMCPartName_KeyDown"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn x:Name="dgdtpePartsCode" Header="부품코드" Width="*"
                                                            
                                                            SortMemberPath="McPartID">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Margin="2" Text="{Binding McPartID}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding McPartID}" TextChanged="dgdtxtMCPartID_TextChanged"
                                                         Keyboard.KeyDown="dgdtxtMCPartID_KeyDown"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="0.2*" />
                                </Grid.ColumnDefinitions>
                                <Viewbox Grid.Column="0" HorizontalAlignment="Left" Margin="3">
                                    <TextBlock Text="★사용부품별 교환/점검 설정타점수" Margin="2"/>
                                </Viewbox>
                                <Button x:Name="btnSubAdd" Grid.Column="1" Margin="1" HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center" Content="추가" Click="btnSubAdd_Click"/>
                                <Button x:Name="btnSubDel" Grid.Column="2" Margin="1" HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center" Content="삭제" Click="btnSubDel_Click"/>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
