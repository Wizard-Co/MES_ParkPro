<UserControl x:Class="WizMes_ParkPro.Win_dvl_Molding_U"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WizMes_ParkPro"
             mc:Ignorable="d" Loaded="Usercontrol_Loaded"
             d:DesignHeight="620" d:DesignWidth="820">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="813*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="88*"/>
            <RowDefinition Height="532*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="{DynamicResource WizMes_ParkPro}" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="160*" />
                <ColumnDefinition Width="180*" />
                <ColumnDefinition Width="180*" />
                <ColumnDefinition Width="200*" />
            </Grid.ColumnDefinitions>
            <Popup x:Name="popMultiArticle" IsOpen="False">
                <Border BorderBrush="Green" BorderThickness="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Content="품명다중선택" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="Green"/>
                        <Label Grid.Column="0" Grid.Row="1" Content="품명1" Margin="1" HorizontalContentAlignment="Center" Width="90" Height="25"/>
                        <Label Grid.Column="0" Grid.Row="2" Content="품명2" Margin="1" HorizontalContentAlignment="Center" Width="90" Height="25"/>
                        <Label Grid.Column="0" Grid.Row="3" Content="품명3" Margin="1" HorizontalContentAlignment="Center" Width="90" Height="25"/>
                        <Label Grid.Column="0" Grid.Row="4" Content="품명4" Margin="1" HorizontalContentAlignment="Center" Width="90" Height="25"/>
                        <Label Grid.Column="0" Grid.Row="5" Content="품명5" Margin="1" HorizontalContentAlignment="Center" Width="90" Height="25"/>
                        <TextBox x:Name="txtArticleSrh1" Grid.Column="1" Grid.Row="1" Margin="1" Width="90" Height="25"
                                 Keyboard.KeyDown="TxtArticleSrh1_KeyDown"/>
                        <TextBox x:Name="txtArticleSrh2" Grid.Column="1" Grid.Row="2" Margin="1" Width="90" Height="25"
                                  Keyboard.KeyDown="TxtArticleSrh2_KeyDown"/>
                        <TextBox x:Name="txtArticleSrh3" Grid.Column="1" Grid.Row="3" Margin="1" Width="90" Height="25"
                                  Keyboard.KeyDown="TxtArticleSrh3_KeyDown"/>
                        <TextBox x:Name="txtArticleSrh4" Grid.Column="1" Grid.Row="4" Margin="1" Width="90" Height="25"
                                  Keyboard.KeyDown="TxtArticleSrh4_KeyDown"/>
                        <TextBox x:Name="txtArticleSrh5" Grid.Column="1" Grid.Row="5" Margin="1" Width="90" Height="25"
                                  Keyboard.KeyDown="TxtArticleSrh5_KeyDown"/>

                        <Button x:Name="btnPfArticleSrh1" Grid.Column="2" Grid.Row="1" Margin="1" Width="25" Height="25"
                                Click="BtnPfArticleSrh1_Click">
                            <Image Source="{DynamicResource btiPlusFind}" />
                        </Button>
                        <Button x:Name="btnPfArticleSrh2" Grid.Column="2" Grid.Row="2" Margin="1" Width="25" Height="25"
                                Click="BtnPfArticleSrh2_Click">
                            <Image Source="{DynamicResource btiPlusFind}" />
                        </Button>
                        <Button x:Name="btnPfArticleSrh3" Grid.Column="2" Grid.Row="3" Margin="1" Width="25" Height="25"
                                Click="BtnPfArticleSrh3_Click">
                            <Image Source="{DynamicResource btiPlusFind}" />
                        </Button>
                        <Button x:Name="btnPfArticleSrh4" Grid.Column="2" Grid.Row="4" Margin="1" Width="25" Height="25"
                                Click="BtnPfArticleSrh4_Click">
                            <Image Source="{DynamicResource btiPlusFind}" />
                        </Button>
                        <Button x:Name="btnPfArticleSrh5" Grid.Column="2" Grid.Row="5" Margin="1" Width="25" Height="25"
                                Click="BtnPfArticleSrh5_Click">
                            <Image Source="{DynamicResource btiPlusFind}" />
                        </Button>
                        <Button x:Name="btnPfArticleSrh1Clear" Grid.Column="3" Grid.Row="1" Margin="1" Width="25" Height="25"
                                Click="BtnPfArticleSrh1Clear_Click" Content="C">
                        </Button>
                        <Button x:Name="btnPfArticleSrh2Clear" Grid.Column="3" Grid.Row="2" Margin="1" Width="25" Height="25"
                                Click="BtnPfArticleSrh2Clear_Click"  Content="C">
                        </Button>
                        <Button x:Name="btnPfArticleSrh3Clear" Grid.Column="3" Grid.Row="3" Margin="1" Width="25" Height="25"
                                Click="BtnPfArticleSrh3Clear_Click"  Content="C">
                        </Button>
                        <Button x:Name="btnPfArticleSrh4Clear" Grid.Column="3" Grid.Row="4" Margin="1" Width="25" Height="25"
                                Click="BtnPfArticleSrh4Clear_Click"  Content="C">
                        </Button>
                        <Button x:Name="btnPfArticleSrh5Clear" Grid.Column="3" Grid.Row="5" Margin="1" Width="25" Height="25"
                                Click="BtnPfArticleSrh5Clear_Click"  Content="C">
                        </Button>
                        <Grid Grid.Row="6" Grid.ColumnSpan="4" Margin="1" Height="25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btnMultiArticleOK" Grid.Column="0" Content="확인" Click="BtnMultiArticleOK_Click"/>
                            <Button x:Name="btnMultiArticleCC" Grid.Column="1" Content="취소" Click="BtnMultiArticleCC_Click"/>
                        </Grid>
                    </Grid>
                </Border>
            </Popup>
            <Grid Grid.Column="1" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*"/>
                    <ColumnDefinition Width="85*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="lblDate" Grid.Column="0" 
                       VerticalContentAlignment="Center"
                       MouseLeftButtonUp="lblDate_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal" Margin="-2">
                        <Viewbox>
                            <CheckBox x:Name="chkDate" Checked="chkDate_Checked" Unchecked="chkDate_Unchecked"/>
                        </Viewbox>
                        <TextBlock Text="금형발주일" Margin="-5, 0, 0, 0"/>
                    </StackPanel>
                </Label>
                <DatePicker x:Name="dtpSDate" Grid.Column="1" Padding="0" IsEnabled="False"
                            VerticalContentAlignment="Center"/>
            </Grid>

            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32.5*"/>
                    <ColumnDefinition Width="32.5*"/>
                    <ColumnDefinition Width="85*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnThisMonth" Grid.Column="0" 
                        VerticalContentAlignment="Center" 
                        HorizontalContentAlignment="Center" Content="금월" Click="btnThisMonth_Click"/>
                <Button x:Name="btnToday" Grid.Column="1" 
                        VerticalContentAlignment="Center" 
                        HorizontalContentAlignment="Center" Content="금일" Click="btnToday_Click"/>
                <DatePicker x:Name="dtpEDate" Grid.Column="2" Padding="0" IsEnabled="False"
                            VerticalContentAlignment="Center"/>
            </Grid>

            <Grid Grid.Column="1" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*"/>
                    <ColumnDefinition Width="75*"/>
                </Grid.ColumnDefinitions>
                <!--새로만들기-->
                <Label Grid.Column="0" VerticalContentAlignment="Center" 
                       MouseLeftButtonUp="lblDisCardSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox Checked="chkDisCardSrh_Checked" Unchecked="chkDisCardSrh_Unchecked"/>
                        </Viewbox>
                        <TextBlock Text="금형 점검필요" Margin="-5, 0, 0, 0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>

                <!--새로만들기-->
                <Label Grid.Column="1" VerticalContentAlignment="Center" 
                       MouseLeftButtonUp="lblDisCardSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox Checked="chkDisCardSrh_Checked" Unchecked="chkDisCardSrh_Unchecked"/>
                        </Viewbox>
                        <TextBlock Text="사용기한 경과" Margin="-5, 0, 0, 0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*"/>
                    <ColumnDefinition Width="75*"/>
                </Grid.ColumnDefinitions>
                <!--새로만들기 기존 타발수 점검 필요버튼-->
                <Label x:Name="lblCheckNeedMoldSrh" Grid.Column="0" 
                       VerticalContentAlignment="Center" 
                       MouseLeftButtonUp="lblCheckNeedMoldSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkCheckNeedMoldSrh" Checked="chkCheckNeedMoldSrh_Checked" 
                                      Unchecked="chkCheckNeedMoldSrh_Unchecked"/>
                        </Viewbox>
                        <TextBlock Text="금형 세척필요" Margin="-5, 0, 0, 0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>

                <Label x:Name="lblDisCardSrh" Grid.Column="1" VerticalContentAlignment="Center" 
                       MouseLeftButtonUp="lblDisCardSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkDisCardSrh" Checked="chkDisCardSrh_Checked" Unchecked="chkDisCardSrh_Unchecked"/>
                        </Viewbox>
                        <TextBlock Text="폐기건 포함" Margin="-5, 0, 0, 0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>
            </Grid>


            <Grid Grid.Column="2" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85*"/>
                    <ColumnDefinition Width="105*"/>
                    <ColumnDefinition Width="20*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="lblMoldNoSrh" Grid.Column="0" 
                       VerticalContentAlignment="Center"
                       MouseLeftButtonUp="lblMoldNoSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal" Margin="-2">
                        <Viewbox>
                            <CheckBox x:Name="chkMoldNoSrh" Checked="chkMoldNoSrh_Checked" 
                                      Unchecked="chkMoldNoSrh_Unchecked"/>
                        </Viewbox>
                        <TextBlock Text="금형LotNo" Margin="-5, 0, 0, 0"/>
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtMoldNoSrh" Grid.Column="1" Padding="0" IsEnabled="False"
                         VerticalContentAlignment="Center"/>
            </Grid>
            <Grid Grid.Column="2" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85*"/>
                    <ColumnDefinition Width="105*"/>
                    <ColumnDefinition Width="20*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="lblArticleSrh" Grid.Column="0" 
                       VerticalContentAlignment="Center"
                       MouseLeftButtonUp="lblArticleSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal" Margin="-2">
                        <Viewbox>
                            <CheckBox x:Name="chkArticleSrh" Checked="chkArticleSrh_Checked" 
                                      Unchecked="chkArticleSrh_Unchecked"/>
                        </Viewbox>
                        <TextBlock Text="품     번" Margin="-5, 0, 0, 0"/>
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtArticleSrh" Grid.Column="1" Margin="1" IsEnabled="False"
                         Keyboard.KeyDown="txtArticleSrh_KeyDown"/>
                <Button x:Name="btnPfArticleSrh" Grid.Column="2" Margin="1" IsEnabled="False"
                        Click="btnPfArticleSrh_Click">
                    <Image Source="{DynamicResource btiPlusFind}" />
                </Button>
            </Grid>

            <Grid Grid.Column="2" Grid.Row="2" Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85*"/>
                    <ColumnDefinition Width="105*"/>
                    <ColumnDefinition Width="20*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="lblCustomSrh" Grid.Column="0" 
                       VerticalContentAlignment="Center"
                       MouseLeftButtonUp="lblCustomSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal" Margin="-2">
                        <Viewbox>
                            <CheckBox x:Name="chkCustomSrh" Checked="chkCustomSrh_Checked"
                                      Unchecked="chkCustomSrh_Unchecked"/>
                        </Viewbox>
                        <TextBlock Text="사     번" Margin="-5, 0, 0, 0"/>
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtCustomSrh" Grid.Column="1" Padding="0" IsEnabled="False"
                         VerticalContentAlignment="Center"
                         Keyboard.KeyDown="txtCustomSrh_KeyDown"/>
                <Button x:Name="btnPfCustomSrh" Grid.Column="2" IsEnabled="False"
                        VerticalContentAlignment="Center"
                        Click="btnPfCustomSrh_Click">
                    <Image Source="{DynamicResource btiPlusFind}" />
                </Button>
            </Grid>

            <Grid Grid.Column="2" Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85*"/>
                    <ColumnDefinition Width="105*"/>
                    <ColumnDefinition Width="20*"/>
                </Grid.ColumnDefinitions>
            </Grid>
            <Grid Grid.Column="3" Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85*" />
                    <ColumnDefinition Width="105*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Row="1" Grid.Column="0" 
                       VerticalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Text="금형식별표색상" VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>
                <ComboBox x:Name="cboColor" Grid.Row="1" Grid.Column="1" Padding="0" Background="White"
                          VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
            </Grid>

            <Grid Grid.Column="4" Grid.Row="0" Grid.RowSpan="4" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnAdd" Grid.Column="0" Click="btnAdd_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiInsert}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblInsert},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnUpdate" Grid.Column="1" Click="btnUpdate_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiUpdate}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblUpdate},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnDelete" Grid.Column="2" Click="btnDelete_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiDelete}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblDelete},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnClose" Grid.Column="3" Click="btnClose_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiClose}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblClose},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnSearch" Grid.Column="0" Click="btnSearch_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiSearch}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblSearch},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnSave" Grid.Column="1" Click="btnSave_Click" Visibility="Hidden">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiSave}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblSave},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnCancel" Grid.Column="2" Click="btnCancel_Click" Visibility="Hidden">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiCancle}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblCancle},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnExcel" Grid.Column="3" Click="btnExcel_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiExcel}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblExcel},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <Grid Grid.Column="3" Grid.Row="2" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*" />
                        <ColumnDefinition Width="10*" />
                        <ColumnDefinition Width="10*" />
                        <ColumnDefinition Width="10*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"  x:Name="lblInDay" VerticalContentAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="-2">
                            <Viewbox>
                                <CheckBox x:Name="chkMainTain" VerticalAlignment="Center"
                                      IsChecked="False"/>
                            </Viewbox>
                            <TextBlock Text="유지추가" Margin="-5, 0, 0, 0"
                                           VerticalAlignment="Center"/>
                        </StackPanel>
                    </Label>

                    <Button x:Name="btnPrint" Grid.Column="3" >
                        <!--Click="btnPrint_Click"-->
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiPrint}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="인쇄" VerticalAlignment="Center"></TextBlock>
                        </StackPanel>
                    </Button>


                </Grid>

            </Grid>
        </Grid>

        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="390*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="425*"/>
            </Grid.ColumnDefinitions>
            <DataGrid x:Name="dgdMain" Grid.Column="0" Margin="1" IsReadOnly="True" Style="{DynamicResource DataGridSet1}"
                      SelectionChanged="dgdMain_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="순번" Binding="{Binding Num}"/>
                    <DataGridTextColumn Header="금형번호" Binding="{Binding MoldID}"/>
                    <DataGridTextColumn Header="금형LotNo" Binding="{Binding MoldNo}"/>
                    <DataGridTextColumn Header="사번" Binding="{Binding ArticleID}" Visibility="Hidden"/>
                    <DataGridTextColumn Header="차종" Binding="{Binding BuyerModelName}"/>
                    <DataGridTextColumn Header="품번" Binding="{Binding BuyerArticleNo}"/>
                    <DataGridTextColumn Header="가로Size(mm)" Binding="{Binding MoldSizeX}"/>
                    <DataGridTextColumn Header="세로Size(mm)" Binding="{Binding MoldSizeY}"/>
                    <DataGridTextColumn Header="높이Size(mm)" Binding="{Binding MoldSizeH}"/>
                    <DataGridTextColumn Header="금형재질" Binding="{Binding MoldQuality}"/>
                    <DataGridTextColumn Header="금형제작업체" Binding="{Binding ProdCustomName}"/>
                    <DataGridTextColumn Header="금형소유권" Binding="{Binding OwnerCustomName}"/>
                    <DataGridTextColumn Header="일시불/상각" Binding="{Binding OwnerOneTimePayYn}"/>
                    <DataGridTextColumn Header="입고일" Binding="{Binding SetDate}"/>
                    <DataGridTextColumn Header="사용여부" Binding="{Binding DisCardYN}"/>
                    <DataGridTextColumn Header="금형타발수"/>
                    <DataGridTextColumn Header="보관위치" Binding="{Binding StorgeLocationName}"/>
                    <DataGridTextColumn Header="주금형" Binding="{Binding MainUseYN}"/>
                    <DataGridTextColumn Header="담당자" Binding="{Binding MoldPerson}"/>
                    <DataGridTextColumn Header="비고" Binding="{Binding Comments}"/>
                    <DataGridTextColumn Header="품명" Binding="{Binding Article}"/>
                    <DataGridTextColumn Header="고객사명" Binding="{Binding KCustom}"/>
                    <DataGridTextColumn Header="금형발주일" Binding="{Binding ProdOrderDate}"/>
                    <DataGridTextColumn Header="금형완료예정일" Binding="{Binding ProdDueDate}"/>
                    <DataGridTextColumn Header="금형완료일" Binding="{Binding ProdCompDate}"/>

                    <DataGridTextColumn Header="점검주기"/>

                    <DataGridTextColumn Header="점검후타발수" Binding="{Binding AfterRepairHitcount}" 
                                        CellStyle="{DynamicResource NumericDataGridCell}"/>
                    <DataGridTextColumn Header="세척주기"/>
                    <DataGridTextColumn Header="세척후타발수" Binding="{Binding AfterWashHitcount}"/>
                    <DataGridTextColumn Header="타발수설정일" Binding="{Binding SetHitCountDate}"/>
                    <DataGridTextColumn Header="수명타발수" Binding="{Binding SetProdQty}" 
                                        CellStyle="{DynamicResource NumericDataGridCell}"/>
                    <DataGridTextColumn Header="초기 설정타발수" Binding="{Binding SetHitCount}" 
                                        CellStyle="{DynamicResource NumericDataGridCell}"/>
                    <DataGridTextColumn Header="점수" Binding="{Binding Evalscore}" 
                                        CellStyle="{DynamicResource NumericDataGridCell}"/>
                    <DataGridTextColumn Header="등급" Binding="{Binding EvalGrade}"/>
                    <DataGridTextColumn Header="등급평가일" Binding="{Binding EvalDate}"/>
                    <DataGridTextColumn Header="첨부화일명1" Binding="{Binding AttFile1}"/>
                    <DataGridTextColumn Header="첨부화일경로1" Binding="{Binding AttFilePath1}"/>
                    <DataGridTextColumn Header="첨부화일명2" Binding="{Binding AttFile2}"/>
                    <DataGridTextColumn Header="첨부화일경로2" Binding="{Binding AttFilePath2}"/>
                    <DataGridTextColumn Header="첨부화일명3" Binding="{Binding AttFile3}"/>
                    <DataGridTextColumn Header="첨부화일경로3" Binding="{Binding AttFilePath3}"/>
                </DataGrid.Columns>
            </DataGrid>

            <GridSplitter Grid.Column="1" Width="5" ResizeBehavior="PreviousAndNext"/>
            <!--입력 칸-->
            <Grid Grid.Column="2" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="9*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label x:Name="lblMsg" Grid.Column="0" Margin="1" HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center" Background="Yellow" Foreground="Red"
                               Visibility="Hidden">
                            <TextBlock x:Name="tbkMsg" Text="자료 입력 중" />
                        </Label>
                    </Grid>

                    <Grid x:Name="grdInput1" Grid.Row="1" IsEnabled="False">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60*" />
                            <ColumnDefinition Width="60*" />
                            <ColumnDefinition Width="60*" />
                            <ColumnDefinition Width="60*" />
                            <ColumnDefinition Width="20*" />
                            <ColumnDefinition Width="60*" />
                            <ColumnDefinition Width="60*" />
                            <ColumnDefinition Width="5*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
